
<body>
  <header>
        <button onclick= about_path %>About</button>
        <button onclick= items_path %>商品一覧</button>
        <button onclick= new_customer_registration_path %>新規登録</button>
        <button onclick= new_customer_session_path %>ログイン</button>
  </header>

  <main>
    <h3>新規会員登録</h3>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>


  <div class="field">
   <%= f.label :名前 %>
   (姓)<%= f.text_field :last_name %>
   (名)<%= f.text_field :first_name %>
  </div>

  <div class="field">
   <%= f.label :フリガナ %>
   (セイ)<%= f.text_field :last_name_kana %>
   (メイ)<%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :郵便番号 %><br />
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal-code" %>
  </div>

  <div class="field">
    <%= f.label :住所 %><br />
    <%= f.text_field :address, autofocus: true, autocomplete: "address" %>
  </div>

   <div class="field">
    <%= f.label :電話番号 %><br />
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード確認用 %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "    新規登録    "  ,class: "btn btn-success"%>
  </div>

  <% end %>

  <h3>既に登録済みの方<br /></h3>
  <p>&nbsp; <%= link_to "こちら", new_customer_session_path %>&nbsp;からログインしてください。</p>

  </main>
</body>