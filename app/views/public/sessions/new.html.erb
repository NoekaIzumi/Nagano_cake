<body>
  <header>
    　　<%= link_to "About", about_path , class: 'btn btn-default' %>
        <%= link_to "商品一覧", items_path , class: 'btn btn-default' %>
        <%= link_to "新規登録", new_customer_registration_path, class: 'btn btn-default' %>
        <%= link_to "ログイン", new_customer_session_path , class: 'btn btn-default' %>
  </header>

  <main>

    <h2>ログイン</h2>
    　<p>会員の方はこちらからログイン</p>
    　<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    　<div class="field">
    　  <%= f.label :メールアドレス %><br />
    　  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    　  </div>

    　  <div class="field">
    　    <%= f.label :パスワード %><br />
    　    <%= f.password_field :password, autocomplete: "current-password" %>
    　    </div>

    　    <% if devise_mapping.rememberable? %>
    　    <div class="field">
    　    <%= f.check_box :remember_me %>
    　    <%= f.label :remember_me %>
    　    </div>
    　    <% end %>

    　    <div class="actions">
    　      <%= f.submit "    ログイン   " ,class: "btn btn-primary"%>
    　      </div>
    　      <% end %>

    　      <h3>会員登録がお済みでない方<br /></h3>
    　      <p>&nbsp; <%= link_to "こちら", new_customer_registration_path %>&nbsp;から新規登録を行ってください。</p>

