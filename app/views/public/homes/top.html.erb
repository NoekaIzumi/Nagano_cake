     <%= image_tag item.image ,size: "200x150" %>
    <% end %>
    </div>
    <div class = "item-name">
     <%= item.name %>
    </div>

   <div class = "item-price">
    ¥ <%= item.price %>
   </div>
  </div>
<% end %>

