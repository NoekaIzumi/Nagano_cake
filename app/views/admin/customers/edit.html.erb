 <header>


         <div class = "logo">
            <%= link_to root_path do %>
              <%= image_tag 'logo.png', size: "100x100" %>
            <% end %>
         </div>
  	     <div class = "header">
          <%= link_to "商品一覧", admin_items_path , class: 'btn btn-default' %>
          <%= link_to "会員一覧",  admin_customers_path , class: 'btn btn-default' %>
          <%= link_to "注文履歴一覧", admin_path, class: 'btn btn-default' %>
          <%= link_to "ログアウト", destroy_admin_session_path, method: :delete,class: 'btn btn-default' %>
        </div>
  </header>

  <style>


  .logo,
  .header{
  	 display: inline-block;
  }

  .logo {
  	margin-right: 700px;
  }

  .table {
    width:auto;
  }


  .header {
  padding-right : 20px;
  margin-top: 20px;
  margin-bottom: 60px;
  }

  .button {
   margin-left: 200px;
  }

  </style>



<div class = "main">
<div class = "container">
   <h3 style= "margin-left:15px;"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h3>
<div class = "table">
 <%= form_for @customer, url: admin_customer_path(@customer), method: :patch do |f| %>
  <table class="table">
    <tr>
      <th>会員ID</th>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <th>氏名</th>
      <td>
        <%= f.text_field :last_name %>
        <%= f.text_field :first_name %>
      </td>
    </tr>
    <tr>
      <th>フリガナ</th>
      <td>
        <%= f.text_field :last_name_kana %>
        <%= f.text_field :first_name_kana %>
      </td>
    </tr>
    <tr>
      <th>郵便番号</th>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <th>電話番号</th>
      <td><%= f.text_field :telephone_number %></td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td><%= f.text_field :email %></td>
    </tr>
    <tr>
      <th>会員ステータス</th>
      <td>  <div class="field">
    <%= f.label :有効 %>
    <%= f.radio_button :is_deleted, :false %>
    <%= f.label :無効 %>
    <%= f.radio_button :is_deleted, :true %>
  </div></td>
    </tr>
  </table>
 <div class = "button">
   <%= f.submit "  変更を保存  ",class: "btn btn-success" %>
   <% end %>
 </div>
</div>
</div>
</div>



