<body>
  <header>
       <% if admin_signed_in? %>
        <%= link_to "商品一覧", admin_items_path , class: 'btn btn-default' %>
        <%= link_to "会員一覧",  admin_customers_path , class: 'btn btn-default' %>
        <%= link_to "注文履歴一覧", admin_path, class: 'btn btn-default' %>
        <%= link_to "ログアウト", destroy_admin_session_path, method: :delete,class: 'btn btn-default' %>

       <% else %>
        <div class = "logo">
          <%= link_to root_path do %>
            <%= image_tag 'logo.png', size: "100x100" %>
          <% end %>
  	   </div>
  	   <div class = "header">
    　　<%= link_to "About", about_path , class: 'btn btn-default' %>
        <%= link_to "商品一覧", customer_items_path , class: 'btn btn-default' %>
        <%= link_to "新規登録", new_customer_registration_path, class: 'btn btn-default' %>
        <%= link_to "ログイン", new_customer_session_path , class: 'btn btn-default' %>

       <% end %>
       </div>
    </header>

   <style>
   
  .logo,.header {
  	 display: inline-block;
  }

  .logo {
  	margin-right: 700px;
  }


  .header {
  padding-right : 20px;
  margin-top: 20px;
  margin-bottom: 60px;
  }
   
    .main {
      display: flex;
      justify-content: center;
    }

    .form {
      margin: auto;
    }

    .field {
      margin: 20px;
    }

    .actions {
      margin-left: 150px;
      margin-top,bottom,right: 20px;
    }
  </style>

  <div class = "main">
   <div class = "form">

    <h5>管理者ログイン</h5></br>
    <%= form_with model: @admin, url: new_admin_session_path,  class: 'admin', local: true do |f| %>
    <div class="field">
    <%= f.label :メールアドレス %>&nbsp;&nbsp;&nbsp;&nbsp;
    <%= f.email_field :email, autofocus: true, autocomplete: "email",size: "50"  %>
    </div>

    <div class="field">
    <%= f.label :パスワード %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <%= f.password_field :password, autocomplete: "current-password",size: "50"  %>
    </div>


    <div class="actions">
    <%= f.submit "   ログイン   " , class: "btn btn-primary"%>
    </div>
    <% end %>
    <%= render "admin/shared/links" %>
   </div>
  </div>

</body>