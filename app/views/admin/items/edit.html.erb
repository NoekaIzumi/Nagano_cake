
  <header>
         <div class = "logo">
            <%= link_to root_path do %>
              <%= image_tag 'logo.png', size: "100x100" %>
            <% end %>
         </div>
  	     <div class = "header">
          <%= link_to "商品一覧", admin_items_path , class: 'btn btn-default' %>
          <%= link_to "会員一覧",  admin_customers_path , class: 'btn btn-default' %>
          <%= link_to "注文履歴一覧", admin_path, class: 'btn btn-default' %>
          <%= link_to "ログアウト", destroy_admin_session_path, method: :delete,class: 'btn btn-default' %>
        </div>
  </header>

  <style>


  .logo,
  .header{
  	 display: inline-block;
  }

  .logo {
  	margin-right: 700px;
  }


  .header {
  padding-right : 20px;
  margin-top: 20px;
  margin-bottom: 60px;
  }

  table {
    width:auto;
    margin: auto;
  }

  th{
    padding:10px;
  }

  .button {
    margin-top:30px;
    text-align:center;
  }

  </style>

<main>
<h3 style= "margin-left:400px;">商品編集</h3>
<%= form_with model: [:admin,@item], local: true do |f| %>
<table>
  <tr>
    <th>商品画像&emsp;&emsp;</th>
    <td><%= f.file_field :image, accept: "image/*" %></td>
  </tr>
  <tr>
    <th>商品名</th>
    <td><%= f.text_field :name %></td>
  </tr>
  <tr>
    <th>商品説明</th>
    <td><%= f.text_area :introduction %></td>
  </tr>
  <tr>
    <th>税抜価格</th>
    <td><%= f.text_field :price %>円</br></td>
  </tr>
</table>


  <div class = "button">
    <%= f.submit '  変更を保存  ',class: "btn btn-success" %>
<% end %>
  </div>
</main>