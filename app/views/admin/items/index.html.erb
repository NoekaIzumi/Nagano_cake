<script src="https://kit.fontawesome.com/153870c081.js" crossorigin="anonymous"></script>
<body>
        <header>
            <%= link_to "商品一覧", admin_items_path, class: 'btn btn-default' %>
            <%= link_to "会員一覧", admin_customers_path, class: 'btn btn-default' %>
            <%= link_to "注文履歴一覧", admin_path, class: 'btn btn-default' %>
            <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: 'btn btn-default' %>


        </henader>

    <main>
      <h2>商品一覧</h2>

      <%= link_to new_admin_item_path, class: 'btn btn-default' do %>
       <i class="fa-solid fa-circle-plus"></i>
      <% end %>

      <table class = "table">
        <thead>
          <tr>
            <th>商品ID</th>
            <th>商品名</th>
            <th>税抜き価格</th>
          </tr>
        </thead>

        <tbody>
          <% @items.each do |item| %>
          <tr>
            <td><%= item.id %></td>
            <td><%= link_to item.name, admin_item_path(item) %></td>
            <td><%= item.price %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    <div class="pagination justify-content-center">
      <%= paginate @items %>
    </div>
    </main>
</body>
