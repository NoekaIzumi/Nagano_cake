<body>
  <header>
    <div class = "logo">
            <%= link_to root_path do %>
              <%= image_tag 'logo.png', size: "100x100" %>
            <% end %>
  	</div>
  	<div class = "header">
        <%= link_to "商品一覧", admin_items_path , class: 'btn btn-default' %>
        <%= link_to "会員一覧",  admin_customers_path , class: 'btn btn-default' %>
        <%= link_to "注文履歴一覧", admin_path, class: 'btn btn-default' %>
        <%= link_to "ログアウト", destroy_admin_session_path, method: :delete,class: 'btn btn-default' %>
    </div>
  </header>

<style>
  div {
  	 display: inline-block;
  }

  .logo {
  	margin-right: 700px;
  }


  .header {
  padding-right : 20px;
  margin-top: 20px;
  margin-bottom: 60px;
  }
  
  
  main {
    width:890px;
    margin: auto;
  }
  
  .container {
    
  }
  
   .table {
    margin-left 200px;
    
  }
  
</style>


  <main>
    <div class = "container">

    <h3>注文履歴一覧</h3>

    <table class="table">

      <thead>
        <tr>
          <th>購入日時</th>
          <th>購入者</th>
          <th>注文個数</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td>
            <%= link_to admin_order_path(order) do %>
             <%= order.created_at.strftime("%Y-%m-%d %H:%M:%S") %>
            <% end %></td>
          <td><%= order.name %></td>
          <td>
             <% total_quantity = 0 %>
             <% order.order_items.each do |order_item| %>
               <% total_quantity += order_item.quantity %>
             <% end %>
             <%= total_quantity %>
            </td>
        </tr>
        <% end %>
      </tbody>

    </table>
    <div class="pagination justify-content-center">
      <%= paginate @orders %>
    </div>
    </div>
  </main>

</body>