
<body>
  <header>
    　　<%= link_to "About", about_path , class: 'btn btn-default' %>
        <%= link_to "商品一覧", customer_items_path , class: 'btn btn-default' %>
        <%= link_to "新規登録", new_customer_registration_path, class: 'btn btn-default' %>
        <%= link_to "ログイン", new_customer_session_path , class: 'btn btn-default' %>
  </header>

  <style>

  .form {
    text-align: left;
  }

  .main {
    display: flex;
  }

  .field {
    margin-left: 50px;
    
    
    input[type="text"] {
       text-align: center;
    }

　input[type="password"] {
       text-align: center;
    }
  }
  
  

  .actions {
    margin-top:50px;
    text-align: center;
  }

  </style>

   <div class = "form">
    <p>新規会員登録</p>
   </div>

  <div class = "main">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>


  <div class="field">
   <%= f.label :名前 %>
   (姓)<%= f.text_field :last_name %>
   (名)<%= f.text_field :first_name %>
  </div>

  <div class="field">
   <%= f.label :フリガナ %>
   (セイ)<%= f.text_field :last_name_kana %>
   (メイ)<%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :郵便番号 %>
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal-code" %>
  </div>

  <div class="field">
    <%= f.label :住所 %>
    <%= f.text_field :address, autofocus: true, width: 200,autocomplete: "address" %>
  </div>

   <div class="field">
    <%= f.label :電話番号 %>
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %>
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード確認用 %>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "    新規登録    "  ,class: "btn btn-success"%>
  </div>

  <% end %>
  </div>

  <p>既に登録済みの方<br /></p>
  <p>&nbsp; <%= link_to "こちら", new_customer_session_path %>&nbsp;からログインしてください。</p>


</body>