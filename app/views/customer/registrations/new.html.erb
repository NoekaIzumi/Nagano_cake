
<body>
  <header>
    　　<%= link_to "About", about_path , class: 'btn btn-default' %>
        <%= link_to "商品一覧", customer_items_path , class: 'btn btn-default' %>
        <%= link_to "新規登録", new_customer_registration_path, class: 'btn btn-default' %>
        <%= link_to "ログイン", new_customer_session_path , class: 'btn btn-default' %>
  </header>

   <style>
    .main {
      display: flex;
      justify-content: center;
    }
    .form {
      justify-content: center;
    }

    .field {
      margin: 20px;
    }

    .field label {
      text-align: right;
    }

    .actions {
      margin-left: 150px;
      margin-top,bottom,right: 20px;
    }

    .new {
      margin-top: 50px;
    }

  .actions {
    margin-top:50px;
    text-align: left;
  }

  </style>

  <div class = "main">
   <div class = "form">
    <h4>新規会員登録</h4>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "public/shared/error_messages", resource: resource %>
  <div class="field">
   <%= f.label :名前 %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
   (姓)&nbsp;&nbsp;&nbsp;<%= f.text_field :last_name %>&nbsp;
   (名)&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= f.text_field :first_name %>
  </div>

  <div class="field">
   <%= f.label :フリガナ %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
   (セイ)&nbsp;<%= f.text_field :last_name_kana %>&nbsp;
   (メイ)&nbsp;<%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :郵便番号 %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal-code" %>
  </div>

  <div class="field">
    <%= f.label :住所 %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <%= f.text_field :address, autofocus: true, width: 200,autocomplete: "address",size: "55" %>
  </div>

   <div class="field">
    <%= f.label :電話番号 %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <%= f.text_field :telephone_number, autofocus: true, autocomplete: "address" %>
  </div>

  <div class="field">
    <%= f.label :パスワード %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %>&nbsp;
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :パスワード確認用 %>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
   &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; <%= f.submit "    新規登録    "  ,class: "btn btn-success"%>
  </div>

  <% end %>
  
  <div class = "sign_in">
  <p>既に登録済みの方<br /></p>
  <p>&nbsp; <%= link_to "こちら", new_customer_session_path %>&nbsp;からログインしてください。</p>
  </div>
 </div>
</div>

</body>