
  <header>


    　　<%= link_to "マイページ", customer_customer_path(current_customer), class: 'btn btn-default' %>
        <%= link_to "商品一覧", customer_items_path , class: 'btn btn-default' %>
        <%= link_to "カート", customer_cart_items_path, class: 'btn btn-default' %>
        <%= link_to "ログアウト", destroy_customer_session_path, method: :delete,class: 'btn btn-default' %>

        <p>ようこそ
        <%= @customer.last_name %>
		<%= @customer.first_name %>
		さん！</p>
  </header>

  <div class = "container">

  <p>ショッピングカート</p>
  <%= link_to "カートを空にする",customer_cart_items_path, method: :delete, class: "btn btn-danger", "data-confirm" => "本当に消しますか？" %>

   <table class = "table">

     <thead>
       <tr>
         <th>商品名</th>
         <th>単価(税込)</th>
         <th>数量</th>
         <th>小計</th>
         <th></th>
       </tr>
     </thead>

     <tbody>
         <% @cart_items.each do |cart_item| %>
       <tr>
         <td><%= cart_item.item.name %></td>
         <td><%= cart_item.item.with_tax_price %></td>
         <td>
              <%= form_with model:cart_item, url:customer_cart_item_path(cart_item.id) , method: :patch, local:true do |f| %>
               <%= f.select :amount, *[1..10] %>
               <%= f.submit "変更" , class: "btn btn-primary" %>
              <% end %>
         <td><%= cart_item.subtotal %></td>
         <td><%= link_to "削除",customer_cart_item_path(cart_item.id), method: :delete, class: "btn btn-danger", "data-confirm" => "本当に消しますか？" %>
         </td>
         <% @sum += cart_item.subtotal %>
       </tr>
     </tbody>
         <% end %>
   </table>

   <table class = "table">

     <tr>
         <td><%= link_to "買い物を続ける",root_path, class: "btn btn-primary" %></td>
         <td>合計金額</td>
         <td><%= @sum %></td>
     </tr>
   </table>

   <% if @cart_items.present? %>
   <%= link_to "注文情報入力に進む",new_customer_order_path, class: "btn btn-success" %>
   <% end %>

  </div>