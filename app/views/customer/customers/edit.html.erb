<body>
  <header>
  	<div class = "logo">
            <%= link_to root_path do %>
              <%= image_tag 'logo.png', size: "100x100" %>
            <% end %>
  	</div>
  	<div class = "header">
    　　<%= link_to "マイページ", customer_customer_path(current_customer), class: 'btn btn-default' %>
        <%= link_to "商品一覧", customer_items_path , class: 'btn btn-default' %>
        <%= link_to "カート", customer_cart_items_path, class: 'btn btn-default' %>
        <%= link_to "ログアウト", destroy_customer_session_path, method: :delete,class: 'btn btn-default' %>
     </div>
  </header>

   <style>

  div {
  	 display: inline-block;
  }

  .logo {
  	margin-right: 700px;
  }


  .header {
  padding-right : 20px;
  margin-top: 20px;
  margin-bottom: 60px;
  }
  
  form{
     margin:0px;
  }
  
  a{
    margin-right:50px;
  }
  
  table {
    margin-left: 30px;
    margin-bottom:20px;
  }
  

</style>

<main>
<h5>　会員情報編集　</h5>
<%= form_for([:customer, @customer]) do |f| %>

<table>
  <tr>
  <th><%= f.label :氏名 %></th> 
  <td><%= f.text_field :last_name %> <%= f.text_field :first_name %></td>
  </tr></br>

  <tr>
   <th><%= f.label :フリガナ %></th> 
   <td><%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %></td>
  </tr></br>

  <tr>
  <th> <%= f.label :郵便番号 %></th>
  <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal-code" %></td>
  </tr></br>

  <tr>
  <th> <%= f.label :住所 %></th>
  <td><%= f.text_field :address, autofocus: true, autocomplete: "address" %></td>
  </tr></br>

  <tr>
    <th><%= f.label :電話番号 %></th>
    <td><%= f.text_field :telephone_number, autofocus: true, autocomplete: "address" %></td>
  </tr></br>

　<tr>
   <th><%= f.label :メールアドレス %></th>
   <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
　</tr>
　</table>

　<div class="actions">
  <a><%= f.submit "    編集内容を保存    "  ,class: "btn btn-success"%></a>
  
  <a><%= link_to " 退会する" , customers_confirm_withdraw_path, class: "btn btn-danger ms-3" %></a>
  </div>
<% end %>

</main>