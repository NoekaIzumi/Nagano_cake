 <header>
  	<div class = "logo">
            <%= link_to root_path do %>
              <%= image_tag 'logo.png', size: "100x100" %>
            <% end %>
  	</div>
  	<div class = "header">
    　　<%= link_to "マイページ", customer_customer_path(current_customer), class: 'btn btn-default' %>
        <%= link_to "商品一覧", customer_items_path , class: 'btn btn-default' %>
        <%= link_to "カート", customer_cart_items_path, class: 'btn btn-default' %>
        <%= link_to "ログアウト", destroy_customer_session_path, method: :delete,class: 'btn btn-default' %>
     </div>
  </header>

  <style>

  div {
  	 display: inline-block;
  }

  .logo {
  	margin-right: 700px;
  }


  .header {
  padding-right : 20px;
  margin-top: 20px;
  margin-bottom: 60px;
  }

  table {
    margin:30px;
  }

  </style>

<div class = "container">

<strong><h3>注文履歴一覧</h3></strong>
<div class = "table">
  <table class = "table">
    <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>注文詳細</th>
    </tr>
    </thead>

    <tbody>
     <% @orders.each do |order| %>
      <tr>
        <td><%=order.created_at.strftime("%Y-%m-%d") %></td>
        <td><%=order.address %></td>
        <td> <% order.order_items.each do |order_item| %>
   　          <%= order_item.item.name %><br>
             <% end %>
        </td>
        <td><%=order.total_amount %>円</td>
        <td><%= link_to "表示する",customer_order_path(order), class: "btn btn-primary" %></td>
      </tr>
     <% end %>
    </tbody>
  </table>
</div>
</div>